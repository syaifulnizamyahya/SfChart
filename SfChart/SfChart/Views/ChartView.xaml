<Page x:Class="SfChart.Views.ChartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Charts="using:Syncfusion.UI.Xaml.Charts"
      xmlns:ViewModels="using:SfChart.ViewModels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:SfChart.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            
            <Charts:SfChart x:Name="chart3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Access Point Signal Strength"
                            Series="{x:Bind ViewModels.RssiCollection}">
                <Charts:SfChart.PrimaryAxis>
                    <Charts:NumericalAxis FontSize="14" Header="Channel" />
                </Charts:SfChart.PrimaryAxis>

                <Charts:SfChart.SecondaryAxis>
                    <Charts:NumericalAxis FontSize="14" Header="RSSI" />
                </Charts:SfChart.SecondaryAxis>

                <Charts:SfChart.Legend>
                    <Charts:ChartLegend />
                </Charts:SfChart.Legend>

            </Charts:SfChart>
        </RelativePanel>
    </ScrollViewer>
</Page>
